<div class="mt-4" id="form-login">
  {{! <h3>LOGIN</h3> }}
  <br />
  <form method="POST" action="/user/login">
    <div class="form-group">
      <label for="username">Name</label>
      <input type="text" class="form-control" id="email" name="email" />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" name="email" />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" />
    </div>

    <span id="message-login-false">{{error}}</span>

    <br />
    <button type="submit" class="btn btn-primary btn-block mb-4 full-width">Đăng nhập</button>
  </form>
  <!-- Register buttons -->
  <div class="text-center">
    <p>Bạn chưa có tài khoản? <a href="/user/register">Đăng ký</a></p>
  </div>
</div>